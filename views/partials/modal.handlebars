    <button type="button" id="add_people_button"><i class="fas fa-plus"></i></button>

    <div id="modal-backdrop" class="hidden"></div>

    <div id="add-something-modal" class="hidden">
      <div class="modal-dialog">

        <div class="modal-header">
          <button type="button" id="modal-close" class="modal-hide-button">&times;</button>
          <h3>Add a new person on CS Storage</h3>
        </div>

        <div class="modal-body">

          <div class="post-input-element">
            <label for="post-text-input">Person name:</label>
            <input type="text" id="post-name-input"></input>
          </div>

          <div class="post-input-option">
            <label for="post-gender">Gender:</label>
            <div class="post-input-element">
              <select id="post-gender" class="post-input" name="post-gender">
                <option selected value="">Any</option>
                <option>Female</option>
                <option>Male</option>
              </select>
            </div>
          </div>

          <div class="post-input-element">
            <label for="post-photo-input">Photo URL:</label>
            <input type="text" id="post-photo-input">
          </div>

          <div class="post-input-element">
            <label for="post-blog-input">blog link:</label>
            <input type="text" id="post-blog-input">
          </div>

          <div class="post-input-element">
            <label for="post-text-input">Email:</label>
            <input type="text" id="post-email-input"></input>
          </div>

          <div class="post-input-element">
            <label for="post-text-input">Telephone Number:</label>
            <input type="text" id="post-telephone-input"></input>
          </div>

        </div>

        <div class="modal-footer">
          <button type="button" id="modal-cancel" class="modal-hide-button action-button">Cancel</button>
          <button type="button" id="modal-accept" class="action-button">Create Post</button>
        </div>

      </div>
    </div>
